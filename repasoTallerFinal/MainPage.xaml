<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="repasoTallerFinal.MainPage"
             Title="JA Recargas">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <Label Text="JA RECARGAS"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Etiqueta para número -->
            <Label Text="Ingrese el número de teléfono:"
                   FontAttributes="Bold" />

            <!-- Teléfono centrado -->
            <Entry x:Name="numeroEntry"
                   Placeholder="Ingrese número telefónico"
                   Keyboard="Telephone"
                   FontSize="18"
                   BackgroundColor="#EFEFEF"
                   HorizontalOptions="Center"
                   WidthRequest="250" />

            <!-- Contenido en 2 columnas -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="20">

                <!-- Operador a la izquierda -->
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="Operador" FontAttributes="Bold"/>
                    <Picker x:Name="operadorPicker"
                            Title="Seleccione operador"
                            FontSize="18"
                            HorizontalOptions="Fill"/>
                </VerticalStackLayout>

                <!-- Monto a la derecha (CheckBox) -->
                <VerticalStackLayout Grid.Column="1">
                    <Label Text="Seleccione el monto deseado:" FontAttributes="Bold"/>

                    <HorizontalStackLayout>
                        <CheckBox x:Name="monto3Check" CheckedChanged="OnMontoCheckedChanged" />
                        <Label Text="$3" VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <CheckBox x:Name="monto5Check" CheckedChanged="OnMontoCheckedChanged" />
                        <Label Text="$5" VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <CheckBox x:Name="monto10Check" CheckedChanged="OnMontoCheckedChanged" />
                        <Label Text="$10" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

            </Grid>

            <!-- Texto dinámico de selección -->
            <Label x:Name="seleccionLabel"
                   Text=""
                   FontAttributes="Italic"
                   FontSize="16"
                   TextColor="DarkSlateGray"
                   HorizontalOptions="Center" />

            <!-- Botón recarga -->
            <Button Text="Realizar Recarga"
                    Clicked="OnRecargarClicked"
                    BackgroundColor="Purple"
                    TextColor="White"
                    FontSize="20"
                    Padding="12,6"
                    HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
